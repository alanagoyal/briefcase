{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "pdfjs-dist": ["./node_modules/pdfjs-dist/build/pdf"],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "freestylenext/types/**/*.ts",
    "types/pdf.d.ts"
  ],
  "exclude": [
    "node_modules",
    "freestyle/monkey-patch.js",    
    "freestyle/entry.js",
  ]
}
